<div class="container mt-5">
  <h1 class="mb-4">Top Headlines</h1>

  <% if @top_headlines %>
    <div class="row">
      <% @top_headlines['articles'].each do |article| %>
        <div class="col-md-6">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= article['title'] %></h5>
              <p class="card-text"><%= article['description'] %></p>
              <a href="<%= article['url'] %>" class="btn btn-primary">Read full news</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:error] %>
    </div>
  <% end %>
</div>
